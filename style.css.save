
header{
	height: 18%;
	text-align: center;	
	font-family: 'Mountains of Christmas';
	font-size: 1.3em;
}

header h1{
	font-size: 4.0em;
}

body{
	background-image: url('icones/5fc27032827b2');
	background-repeat: no-repeat;
	background-attachment: fixed;
	background-size: 100%;
	background-color: #16446d;
	font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}

input:focus{
	outline:  none;
}
textarea:focus{
	outline: none;
}
button:focus{
	outline: none;
}

/* ---------- BARRE DE NAVIGATION ---------- */

ul#menu{
	height: 60px ;
	margin: 0 ;
	padding: 0 ;
	background-color: rgb(190, 40, 40);
	list-style: none;
	border-radius: 20px;
	position: relative;
	z-index: 2;
	top: 0;
}

ul#menu li
{
	float: left;
	text-align: center ;	
}

ul#menu li a
{
	width: 190Px ;
	line-height: 60px ;
	font-size: 1.7em ;
	font-weight: bold ;
	letter-spacing: 1px ;
	color: #fff ;
	display: block ;
	text-decoration: none ;
	padding: 0px 5px;
	outline: none; 
}

ul#menu li a:hover, ul#menu li#btn_deconnec button:hover {
	//background-color: rgb(122, 122, 122);
	background-color: rgb(185, 70, 70);
	transform: scale(1.05);
	font-size: 1.9em;
	border-right: 2px solid rgb(0, 0, 0) ;
	border-left: 2px solid rgb(0, 0, 0) ;
	border-radius: 20px;
	box-shadow: 1px 0px 5px 1px rgba(0, 0, 0, 1);
  }

ul#menu li#btn_connec, ul#menu li#btn_option {
	float: right;
}  

ul#menu li#btn_admin a{
	width: 280px;
}

ul#menu li#btn_connec a{
	width: 220px;
}

ul#menu li#btn_deconnec button{
	margin-left: 2%;
	width: 260px;
	color:white;
	background-color: rgb(190, 40, 40);
	border: none;
	border-radius:20px;
	line-height: 59px ;
	font-size: 1.8em ;
	font-weight: bold ;
	letter-spacing: 1px ;
	font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
} 

ul#menu li#btn_compte a{
	margin-top: 5%;
	margin-left:1%;
	width: 250px;
}

.content {
	padding: 0px;
}
  
.sticky {
	position: fixed;
	top: 20;
	width: 98.5%;	
	z-index: 2;
}

ul#menu li#btn_option button{
	width:300px;
	color:white;
	background-color: rgb(190, 40, 40);
	border: none;
	border-radius:20px;
	line-height: 0px ;
	padding-top: 5%;
	font-size: 1.8em ;
	font-weight: bold ;
	letter-spacing: 1px ;
	font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
}

.dropdown-content {
	display: none;
	position: absolute;
	width: 15%;
	top: 99%;
	left: 84%;
	background-color:rgb(190, 40, 40);
	border-radius: 0px 0px 15px 15px;
	box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
}
  
.dropdown-content a {
	color: black;
	padding: 12px 0px;
	text-decoration: none;
	display: block;
}
  
.dropdown-content a:hover {
	background-color: rgb(122, 122, 122);
	border-radius: 15px;
}
  
.dropdown:hover .dropdown-content {
	display: block;
}
  


